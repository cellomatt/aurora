doctype html
html
  head
      block head
        //- title needs to be passed in on route handlers
        title Aurora - #{title}
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/index.css')
  body
  block nav
    div.topnav
      a(href="/")
        img.logo(src="/images/logo.svg" width="150px")
      div.flex-containter
        a.topnav__button(href="/home") 🏠 Home
        a.topnav__button(href="/topics") 📄 Topics
      button.nav__search_button 🔍
      input.search_bar(type="text" placeholder="Search")
      form(method="get" action="/login")
        button.nav__submit_button(type="submit") Login

  block content
