extends layout.pug

block content
  div.main
    div.main__left_col
    div.main__center_col
      div
        h1= question.title
        h2= answer.message
      div  
      each comment in comments
        div(id=`comment-trash-container-${comment.id}`)
          h3= comment.message
          if comment.userId === userId
            h3(id=comment.id class="commentTrash") ğŸ—‘ï¸
      if locals.authenticated  
        form(action='/comments' method='post')
          input(name="_csrf" type="hidden" value=csrfToken)
          input(name="answerId" type="hidden" value=answer.id)
          input(name="userId" type="hidden" value=userId)
          label(for="commentMessage")
          textarea(name="commentMessage" placeholder="Respond with comment here" required)
          button(type="submit") Submit  
    div.main__right_col

