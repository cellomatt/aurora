extends layout.pug

include utils.pug
append head
    link(rel='stylesheet' href='/stylesheets/topics.css')
    link(rel='stylesheet' href='/stylesheets/test.css')
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Teko:wght@300;400&display=swap" rel="stylesheet")

block content
    div.main
        div.main__left_col
            div.topic_box
                div.topic_contents_test
                    p.topics Topics
                    each topic in topics
                        a(href=`/topics/${topic.id}`).sidebar_image
                            img.sidebar_image(src=`../images/topic_thumbnail/${topic.id}.png`)


        div.main__center_col

            each question in questions
                +question(question)
        div.main__right_col
