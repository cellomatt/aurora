doctype html
html
  head
      block head
        title Aurora - #{title}
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/index.css')
        meta(name="image" property="og:image" content="/images/aurora.png")
        meta(name="description" property="og:description" content='Aurora is a clone of Quora with an added "ranking" of questions by expertise level.')
        script(src="/javascripts/index.js" type="module" defer)
        script(src="https://kit.fontawesome.com/f041d2b7f3.js" crossorigin="anonymous")
  body
    block nav

      div.topnav
        a(href="/")
          img.logo(src="/images/logo.svg" width="150px")
        div.flex-containter
          a.topnav__button(href="/") üè† Home
          a.topnav__button(href="/topics") üìÑ Topics
          if locals.authenticated
            a.topnav__button(href="/questions/new") üìù Add a Question
        form#search_form(action="/search" method="post")
          button.nav__search_button(type="submit") üîç
          input.search_bar(type="text" name="searchTerm" placeholder="Search" required)

        if locals.authenticated
          form( action='/logout' method='post')
            button.nav__submit_button(type='submit') Log Out
        else
          form(action="/login" method="get")
            button.nav__submit_button(type="submit") Log In
          form(action="/signup" method="get")
            button.nav__submit_button(type="submit") Sign Up

    block content
      div.content
        div.wrapper

