doctype html
html
  head
      block head
        //- title needs to be passed in on route handlers
        title Aurora - #{title}
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/index.css')
  body
  block nav

    div.topnav
      a(href="/")
        img.logo(src="/images/logo.svg" width="150px")
      div.flex-containter
        a.topnav__button(href="/") ğŸ  Home
        a.topnav__button(href="/topics") ğŸ“„ Topics
        if locals.authenticated
          a.topnav__button(href="/questions/new") ğŸ“ Add a Question

      button.nav__search_button ğŸ”
      input.search_bar(type="text" placeholder="Search")

      if locals.authenticated
        form( action='/logout' method='post')
          button.nav__submit_button(type='submit') Log Out
      else
        form(action="/login" method="get")
          button.nav__submit_button(type="submit") Log In
        form(action="/signup" method="get")
          button.nav__submit_button(type="submit") Sign Up

  block content
